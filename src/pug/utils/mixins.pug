    a.header__burger-link(href="#" data-sal="slide-left" data-sal-delay="400" , data-sal-once="true")
      span
    .header__dropdown()
      ul.header__dropdown-nav 
        li.header__dropdown-nav-item: a(href="cases.html") Кейсы
        li.header__dropdown-nav-item: a(href="team.html") Команда
        li.header__dropdown-nav-item: a(href="contacts.html") Контакты
      ul.header__dropdown-bottom
        li.header__dropdown-bottom-item: a(href="") facebook
        li.header__dropdown-bottom-item: a(href="") vk
        li.header__dropdown-bottom-item: a(href="") instagram
        li.header__dropdown-bottom-item: a(href="") behance

mixin festivals()
  section.festivals 
    .festivals__grid
      .festivals__logo
        .header__logo-link(data-sal="zoom-mini-in" data-sal-delay="200" data-sal-once="true")
          img(src="assets/festivals.svg" alt="EnterAgency")
      .festivals__title Участвуем в&nbsp;рекламных фестивалях
    .festivals__grid-bottom
      div(data-sal="slide-up" data-sal-delay="400" data-sal-once="true").festivals__description Участвуем редко, но&nbsp;метко.
        br
        | Получаем награды, радуемся и&nbsp;двигаемся дальше
      .festivals__awards
        +awards-item({title: 'Red Apple', year: '2020', image: 'redapple.jpg'})
        +awards-item({title: 'White Square', year: '2020', image: 'festival-white.jpg'})
        +awards-item({title: 'Идея', year: '2020', image: 'festival-idea.jpg'})

