mixin svg(args)
  svg(viewbox=args.viewbox)&attributes(attributes)
    use(xlink:href=`#${args.name}`)

mixin sections-item(args)
  a.sections__item(href="cases.html")
    .sections__item-bg(data-hover="#FFC486")
      .sections__item-bg-img
        img(src="assets/sections-teaser-01.jpg" alt="")
    .sections__item-category() Video 
    .sections__item-features() 
      p идеи рекламных кампаний
      p вирусный маркетинг
      p креативные макеты

mixin cases-slide(args)
  li.case-slider__item.swiper-slide(data-preview='assets/sections-teaser-01.jpg')
    a.case-slider__item-link
      .case-slider__item-bg()
        if args.image
          img(src="assets/sections-teaser-01.jpg" alt="")
        else
          video(src="assets/video.mp4" playsinline="playsinline" muted="muted") 
      .case-slider__item-content
        .case-slider__item-client= args.name
        .case-slider__item-description Платформа бренда и&nbsp;гайдлайны для&nbsp;многопрофильной группы компаний

mixin cases-small-teaser(args)
  a.case-small__item(href="")
    .case-small__item-bg
      //- img(src="assets/sections-teaser-01.jpg" alt="")
      video(src="assets/video.mp4", autoplay, muted, playsinline) 
    .case-small__item-content
      .case-small__item-client= args.name
      //- .case-small__item-description Платформа бренда и&nbsp;гайдлайны для&nbsp;многопрофильной группы компаний

mixin cases-teaser(args)
  a.cases__item(href="")
    .cases__item-bg
      img.cases__item-preview(src="assets/sections-teaser-01.jpg" alt="")
      //- video.cases__item-preview-hover(src="assets/bg.mp4")
      img.cases__item-preview-hover(src="assets/sections-teaser-02.jpg")
    .cases__item-content
      span.cases__item-client= args.name+', '
      span.cases__item-description Платформа бренда и&nbsp;гайдлайны для&nbsp;многопрофильной группы компаний

mixin awards-item(args)
  .festivals__awards-item
    .festivals__awards-item-title 
      span= args.title
      |
      = args.year
    .festivals__awards-item-image 
      img(src=`assets/${args.image}`, alt="")      

mixin form-row(args)
  .form__row.form__row-input.stacked(class=args.class)
    if args.textarea
      textarea(placeholder=args.placeholder, name=args.name, class=`form__textarea validate--${args.validate}`, oninput="this.parentNode.dataset.value = this.value")
    else
      input(type="text", placeholder=args.placeholder, name=args.name, class=`validate--${args.validate} form__${args.validate}`, required).form__input

    .form__note
    label.form__label(for=args.name)= args.title

//- data-inputmask=args.inputmask,

