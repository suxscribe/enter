mixin svg(args)
    svg(viewbox=args.viewbox)&attributes(attributes)
        use(xlink:href=`#${args.name}`)

mixin sections-item(args)
  a.sections__item(href="cases.html")
    .sections__item-bg(data-hover="#FFC486")
      .sections__item-bg-img 
        img(src="assets/sections-teaser-01.jpg", alt="")
    .sections__item-category Video 
    .sections__item-features 
      p идеи рекламных кампаний
      p вирусный маркетинг
      p креативные макеты

mixin cases-slide(args)
  li.case-slider__item.swiper-slide(data-preview='assets/sections-teaser-01.jpg')
    a.case-slider__item-link
      .case-slider__item-bg
        //- img(src="assets/sections-teaser-01.jpg", alt="")
        video(src="assets/bg.mp4", loop="loop", playsinline="playsinline", muted="muted") 
      .case-slider__item-content
        .case-slider__item-client= args.name
        .case-slider__item-description Платформа бренда и&nbsp;гайдлайны для&nbsp;многопрофильной группы компаний

mixin cases-small-teaser(args)
