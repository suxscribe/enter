    .case-small__item-bg
      img(src="assets/sections-teaser-01.jpg", alt="")
    .case-small__item-content
      .case-small__item-client= args.name
      //- .case-small__item-description Платформа бренда и&nbsp;гайдлайны для&nbsp;многопрофильной группы компаний

mixin cases-teaser(args)
  a.cases__item(href="")
    .cases__item-bg
      img(src="assets/sections-teaser-01.jpg", alt="")
      video(src="assets/bg.mp4")
    .cases__item-content
      span.cases__item-client= args.name+', '
      span.cases__item-description Платформа бренда и&nbsp;гайдлайны для&nbsp;многопрофильной группы компаний

mixin awards-item(args)
  .festivals__awards-item
    .festivals__awards-item-title 
      span= args.title
      |
      = args.year
    .festivals__awards-item-image 
      img(src=`assets/${args.image}`, alt="")      

mixin form-row(args)
  .form__row.form__row-input.stacked(class=args.class)
    if args.textarea
      textarea(placeholder=args.placeholder, name=args.name, class=`form__textarea validate--${args.validate}`, oninput="this.parentNode.dataset.value = this.value")
    else
      input(type="text", placeholder=args.placeholder, name=args.name, class=`validate--${args.validate}`, data-inputmask=args.inputmask, required).form__input
    .form__note
    label.form__label(for=args.name)= args.title

